<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
  <h1>Edit Profile</h1>
  <hr>
	<div class="row">
    <!-- left column -->
    <div class="col-md-3">
      <div class="text-center">
        <%= image_tag display_avatar(current_user), class: "img-circle"%>
        <h6>Upload a different photo...</h6>
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image_datafile, class: "pad-left" %>
        <div class="pad-top">
          <p>Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
        </div>
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-9 personal-info">
      <h3>Personal info</h3>
      
      <form class="form-horizontal" role="form">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :email, class: "control-label"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", type: "text" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :username, class: "control-label" %><br />
          <%= f.text_field :username, autocomplete: "username", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :bio, class: "control-label" %><br />
          <%= f.text_field :bio, autocomplete: "Add a brief bio here!", class: "form-control" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :full_name, class: "control-label" %><br />
          <%= f.text_field :full_name, autocomplete: "Add full name here", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :new_password, class: "control-label" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :new_password, autocomplete: "New password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", type: "password", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-8">
          <div class="actions">
            <%= f.submit "Save Changes", type: "button", class: "btn btn-primary" %>
            <span></span>
            <%= link_to "Cancel", :back, type: "reset", class: "btn btn-default" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>